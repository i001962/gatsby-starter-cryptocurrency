{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "react-app","prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "react-hooks", "jest", "jsx-a11y", "import"],
  "globals": {
    "twttr": true,
    "pageMeta": true,
    "graphql": true,
    "__PATH_PREFIX__": true,
    "__BASE_PATH__": true,
    "__ASSET_PREFIX__": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 2,
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "one-var": ["off", "consecutive"],
    "one-var-declaration-per-line": ["off", "initializations"],
    "object-curly-newline": [
      0,
      {
        "consistent": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "import/imports-first": 0,
    "import/no-unresolved": [
      0,
      {
        "commonjs": true
      }
    ],
    "comma-dangle": 0,
    "global-require": 0,
    "class-methods-use-this": 0,
    "arrow-body-style": [2, "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "no-debugger": 0,
    "dot-notation": 0,
    "no-console": 0,
    "new-cap": 0,
    "strict": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "eol-last": 0,
    "no-shadow": 0,
    "semi": ["error", "never"],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "jsx-quotes": [0, "prefer-single"],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
